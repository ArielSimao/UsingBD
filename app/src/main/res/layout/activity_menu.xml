<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layLoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="br.edu.fatecmm.passagemdeparametros.Menu" >

    <Button
        android:id="@+id/btnAutores"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selbotao"
        android:text="@string/strAutores" />

    <Button
        android:id="@+id/btnLivros"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnAutores"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:background="@drawable/selbotao"
        android:text="@string/strLivros" />

    <Button
        android:id="@+id/btnEditoras"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAutores"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/selbotao"
        android:text="@string/strEditoras" />

    <Button
        android:id="@+id/btnMenuVoltar"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selbotao"
        android:text="@string/strVoltar" />

</RelativeLayout>
